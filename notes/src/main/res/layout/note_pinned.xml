<?xml version="1.0" encoding="utf-8"?>
<com.f0x1d.notes.view.theming.ItemCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="9dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:layout_marginStart="10dp"
    android:id="@+id/note_card"
    app:cardElevation="3dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <com.f0x1d.notes.view.theming.MyImageView
            android:layout_width="wrap_content"
            android:id="@+id/pinned"
            android:src="@drawable/ic_priority_high_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/medium"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:elevation="2dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="text"
            android:singleLine="true"
            android:layout_below="@id/textView_title"
            android:fontFamily="@font/medium"
            android:elevation="1dp"
            android:id="@+id/textView_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <com.f0x1d.notes.view.theming.MyImageView
            android:id="@+id/time_ic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/textView_text"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@id/time"
            android:src="@drawable/ic_edit_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/time"
            android:fontFamily="@font/medium"
            android:text="21:12 12.01.2019"
            android:layout_below="@id/textView_text"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</com.f0x1d.notes.view.theming.ItemCardView>