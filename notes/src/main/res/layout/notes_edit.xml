<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/background"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="33dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.f0x1d.notes.view.CenteredToolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar"
                android:layout_height="wrap_content">
            </com.f0x1d.notes.view.CenteredToolbar>

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/picture"
                android:adjustViewBounds="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/toolbar"
                android:layout_height="wrap_content" />

            <com.f0x1d.notes.view.theming.MyEditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/picture"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:hint="@string/title"
                android:inputType="text|textCapSentences|textAutoCorrect|textMultiLine"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <com.f0x1d.notes.view.theming.MyEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edit_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/note"
                android:inputType="text|textCapSentences|textAutoCorrect|textMultiLine" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/attach_layout"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <com.f0x1d.notes.view.theming.MyImageButton
            android:layout_width="wrap_content"
            android:layout_marginStart="7dp"
            android:id="@+id/attach"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:layout_height="wrap_content" />

        <com.f0x1d.notes.view.theming.MyImageButton
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/force_save"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>