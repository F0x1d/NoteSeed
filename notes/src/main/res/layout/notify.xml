<?xml version="1.0" encoding="utf-8"?>
<com.f0x1d.notes.view.theming.MyCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:id="@+id/note_card"
    android:layout_marginEnd="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/notify"
            android:id="@+id/notify_text"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/pinned"
            android:src="@drawable/ic_priority_high_black_24dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:elevation="2dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/notify_text"
            android:gravity="center_horizontal"
            android:text="title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="text"
            android:singleLine="true"
            android:layout_below="@id/textView_title"
            android:elevation="1dp"
            android:id="@+id/textView_text"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</com.f0x1d.notes.view.theming.MyCardView>